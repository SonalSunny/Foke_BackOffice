@page
@model FOKE.Pages.LookupMaster.ManageModel
@using FOKE.Localization
@using FOKE.Models.PageModels
@{
    Layout = "_LayoutStandaloneContent";
}
@inject ISharedLocalizer Localize
<form method="post" id="crudForm" novalidate="novalidate" autocomplete="off">
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-body">
            <div class="col-12" id="response">
                @if (!string.IsNullOrEmpty(Model.pageErrorMessage))
                {
                    <div class="alert alert-dismissible fade show bg-light-danger border border-light-danger shadow-lg rounded-3 p-3 w-100 d-flex flex-column align-items-center text-center" role="alert">
                        <i class="ki-duotone ki-info-circle fs-2 text-danger me-3"></i>
                        <div class="flex-grow-1 fw-bold text-dark">
                            <strong></strong> @Model.pageErrorMessage
                        </div>
                        <button type="button" class="btn-close position-absolute top-50 end-0 translate-middle-y me-3" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            </div>
            <input type="hidden" asp-for="_formMode" />
            <input type="hidden" asp-for="inputModel.LookUpId" />
            @* <input type="hidden" asp-for="inputModel.loggedinUserId" value="@User?.FindFirst("Userid")?.Value" /> *@
            <div class="row">
                <div class="col-6 mb-5">
                    <div class="form-group">
                        <label class="fs-6 fw-semibold mb-2">@Localize.Localize("LOOKUP_TYPE_NAME")</label>

                        @if (Model.formMode == FormModeEnum.add)
                        {
                            <select asp-for="inputModel.LookUpTypeId"
                            class="form-select form-select-sm select2"
                            asp-items='@new SelectList(Model.LookUpTypeList, "keyID", "name")'>
                                <option value="">Select</option>
                            </select>
                            <span asp-validation-for="inputModel.LookUpTypeId" class="text-danger"></span>
                        }
                        else
                        {
                            <input asp-for="inputModel.LookUpTypeName" class="form-control form-control-sm" disabled />
                            <input type="hidden" asp-for="inputModel.LookUpTypeId" />
                        }

                        <span class="text-danger" data-valmsg-for="inputModel.LookUpTypeName" data-valmsg-replace="true"></span>
                    </div>
                </div>
                <div class="col-6 mb-5">
                    <div class="form-group">
                        <label class="fs-6 fw-semibold mb-2">@Localize.Localize("LOOKUP_NAME")</label>
                        @if (Model.formMode == FormModeEnum.add)
                        {
                            <input asp-for="inputModel.LookUpName" class="form-control form-control-sm" placeholder="Enter @Localize.Localize("LOOKUP_NAME")" />

                            <span class="text-danger" data-valmsg-for="inputModel.LookUpName" data-valmsg-replace="true"></span>
                        }
                        else
                        {
                            @if (Model.LookUPTypeId == 7)
                            {
                                <input asp-for="inputModel.LookUpName" class="form-control form-control-sm" placeholder="Enter @Localize.Localize("LOOKUP_NAME")"/>

                                <span class="text-danger" data-valmsg-for="inputModel.LookUpName" data-valmsg-replace="true"></span>
                            }
                            else
                            {
                                <input asp-for="inputModel.LookUpName" class="form-control form-control-sm" placeholder="Enter @Localize.Localize("LOOKUP_NAME")"  />

                                <span class="text-danger" data-valmsg-for="inputModel.LookUpName" data-valmsg-replace="true"></span>
                            }
                        }
                       
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 mb-5">
                    <div class="form-group">
                        <label class="fs-6 fw-semibold mb-2">@Localize.Localize("LOOKUP_DESCRIPTION")</label>

                        <textarea asp-for="inputModel.Description" class="form-control form-control-sm" placeholder="Enter @Localize.Localize("LOOKUP_DESCRIPTION")"></textarea>


                        <span class="text-danger" data-valmsg-for="inputModel.Description" data-valmsg-replace="true"></span>
                    </div>
                </div>
                <div class="card-footer text-end fixed-bottom bg-light">
                    <div class="row">
                        <div class="col-6 text-start">
                            <button type="button" class="btn btn-secondary btn-flat btn-sm" id="btnClear"><i class="fas fa-times"></i>  Clear</button>

                        </div>
                        <div class="col-6 text-end">
                    <button type="submit" name="btnSubmit" value="btnSave" class="btn btn-primary btn-flat btn-sm btn-req-loader"><i class="far fa-save"></i> Save</button>
                    <button type="submit" name="btnSubmit" id="btnRefresh" value="btnRefresh" class="btn btn-outline-primary btn-sm d-none btn-req-loader" formnovalidate="formnovalidate">btnRefresh</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section scripts {

    <script type="text/javascript">
        $(document).ready(function (e) {
            $("#btnClear").click(function () {
                $("#crudForm")[0].reset(); // Reset the form fields

                $(".select2").val(null).trigger("change");
                $("#inputModel_LookUpName").val("");
                $("#inputModel_Description").val("");
            });
            top.hidePageLoader();
            $('#dt_datepicker .input-group.date').datepicker({
                format: "dd-M-yyyy",
                autoclose: true,
            });
        });
       
        $('.role-code').change(function () {
            var selectedValue = $(this).val();
            $("#btnRefresh").click();
        });
        if ("@Model.IsSuccessReturn" == "True") {
            top.Swal.fire({
                icon: 'success',
                buttonsStyling: false,
                title: "@Html.Raw(@Model.sucessMessage)",
                showConfirmButton: false,
                timer: 1500
            })
            top.hidePopupWithRefresh('btnRefresh');
        }
    </script>

}
