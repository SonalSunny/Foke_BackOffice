@page
@model FOKE.Pages.FeeCampaign.ManageModel
@using FOKE.Localization
@using FOKE.Models.PageModels
@{
    Layout = "_LayoutStandaloneContent";
}
@inject ISharedLocalizer Localize
<form method="post" id="crudForm"  autocomplete="off">
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-body">
            <!-- Error message section -->
            <div class="col-12" id="response">
                @if (!string.IsNullOrEmpty(Model.pageErrorMessage))
                {
                    <div class="alert alert-dismissible fade show bg-light-danger border border-light-danger shadow-lg rounded-3 p-3 w-100 d-flex flex-column align-items-center text-center" role="alert">
                        <i class="ki-duotone ki-info-circle fs-2 text-danger me-3"></i>
                        <div class="flex-grow-1 fw-bold text-dark">@Model.pageErrorMessage</div>
                        <button type="button" class="btn-close position-absolute top-50 end-0 translate-middle-y me-3" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            </div>

            <!-- Hidden field -->
            <input type="hidden" asp-for="_formMode" />
            <input type="hidden" asp-for="inputModel.loggedinUserId" value="@User.FindFirst("Userid")?.Value" />
            <input type="hidden" asp-for="inputModel.CampaignId" />
            <!-- Campaign Name -->
            <div class="row">
                <div class="col-12 mb-5">
                    <div class="form-group">
                        <label class="required form-label">@Localize.Localize("Campaign Name")</label>
                        <input asp-for="inputModel.CampaignName" type=" text" class="form-control form-control-sm" placeholder=@Localize.Localize("Enter Campaign Name") />
                        <span asp-validation-for="inputModel.CampaignName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Start Date and End Date -->
            <div class="row">

               
                <div class="col-6 mb-5">
                    <div class="form-group">
                        <label class="required fs-6 fw-semibold mb-2">@Localize.Localize("Start Date")</label>
                        <div class="form-group" id="dt_datepicker">
                            <div class="input-group date" id="">
                                @if (Model.formMode == FormModeEnum.add)
                                {
                                    <input asp-for="inputModel.StartDate" type="text" class="form-control form-control-sm" placeholder="@Localize.Localize("Start Date")" />

                                }
                                else
                                {
                                    <input asp-for="inputModel.StartDateFormatted" type="text" class="form-control form-control-sm expiry" placeholder="@Localize.Localize("Start Date")" />
                                    <input asp-for="inputModel.StartDate" type="hidden"  />
                                }
                                <span class="input-group-addon input-group-text input-group-text-sm">
                                    <i class="ki-duotone ki-calendar fs-2">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                    </i>
                                </span>
                            </div>
                            <span asp-validation-for="inputModel.StartDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-6 mb-5">
                    <div class="form-group">
                        <label class="required fs-6 fw-semibold mb-2">@Localize.Localize("End Date")</label>
                        <div class="form-group" id="dt_datepicker">
                            <div class="input-group date" id="">
                                @if (Model.formMode == FormModeEnum.add)
                                {
                                    <input asp-for="inputModel.EndDate" type="text" class="form-control form-control-sm" placeholder="@Localize.Localize("End Date")" />

                                }
                                else
                                {
                                    <input asp-for="inputModel.EndDateFormatted" type="text" class="form-control form-control-sm expiry" placeholder="@Localize.Localize("End Date")" />
                                    <input asp-for="inputModel.EndDate" type="hidden" />
                                }
                                <span class="input-group-addon input-group-text input-group-text-sm">
                                    <i class="ki-duotone ki-calendar fs-2">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                    </i>
                                </span>
                            </div>
                            <span asp-validation-for="inputModel.EndDate" class="text-danger"></span>
                        
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 mb-5">
                    <div class="form-group">
                        <label class="required fs-6 fw-semibold mb-2">@Localize.Localize("Membership Fee")</label>
                        <input asp-for="inputModel.MemberShipFee" type="text" class="form-control form-control-sm" placeholder=@Localize.Localize("Enter Membership Fee") />
                        <span asp-validation-for="inputModel.MemberShipFee" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-12 mb-5">
                    <div class="form-group">
                        <label class="required fs-6 fw-semibold mb-2">@Localize.Localize("Description")</label>
                    @*    // <textarea id="PaymentRemarks" class="form-control" placeholder="Payment Remarks" rows="1" style="min-height: 38px;"></textarea> *@
                        <textarea asp-for="inputModel.Description" class="form-control form-control-sm" placeholder=@Localize.Localize("Description")></textarea>
                    </div>
                </div>


            </div>




        </div>

        <!-- Footer -->
        <div class="card-footer fixed-bottom bg-light">
            <div class="row">
                <div class="col-6 text-start">
                    <button type="button" class="btn btn-secondary btn-flat btn-sm" id="btnClear">
                        <i class="fas fa-times"></i> @Localize.Localize("BTN_CLEAR")
                    </button>
                </div>
                <div class="col-6 text-end">
                    <button type="submit" name="btnSubmit" value="btnSave" class="btn btn-primary btn-flat btn-sm btn-req-loader">
                        <i class="far fa-save"></i> @Localize.Localize("BTN_SAVE")
                    </button>
                    <button type="submit" name="btnSubmit" id="btnRefresh" value="btnRefresh"
                            class="btn btn-outline-primary btn-sm d-none btn-req-loader"
                            formnovalidate="formnovalidate">
                        @Localize.Localize("BTN_REFRESH")
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>
@section scripts {
    <script type="text/javascript">
        $(document).ready(function (e) {
             $('#dt_datepicker .input-group.date').datepicker({
                format: "dd-M-yyyy",
                autoclose: true,
            });

            $("#btnClear").click(function () {

                $("#crudForm")[0].reset();
            });

            top.hidePageLoader();
            $.validator.unobtrusive.parse("#crudForm");

            $('.role-code').change(function () {
                var selectedValue = $(this).val();
                $("#btnRefresh").click();
            });
        });
        if ("@Model.IsSuccessReturn" == "True") {
            top.Swal.fire({
                icon: 'success',
                buttonsStyling: false,
                title: "@Html.Raw(@Model.sucessMessage)",
                showConfirmButton: false,
                timer: 1500
            })
            top.hidePopupWithRefresh('btnRefresh');
        }


    </script>
}


