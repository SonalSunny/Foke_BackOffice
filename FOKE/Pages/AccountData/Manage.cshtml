@page
@model FOKE.Pages.AccountData.ManageModel
@using FOKE.Localization
@using FOKE.Models.PageModels

@inject ISharedLocalizer Localize
<form method="post" id="crudForm" novalidate="novalidate" autocomplete="off" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="card">  
        <div class="card-body">
            <div class="col-12" id="response">
                @if (!string.IsNullOrEmpty(Model.pageErrorMessage))
                {
                    <div class="alert alert-dismissible fade show bg-light-danger border border-light-danger shadow-lg rounded-3 p-3 w-100 d-flex flex-column align-items-center text-center" role="alert">
                        <i class="ki-duotone ki-info-circle fs-2 text-danger me-3"></i>
                        <div class="flex-grow-1 fw-bold text-dark">
                            <strong></strong> @Model.pageErrorMessage
                        </div>
                        <button type="button" class="btn-close position-absolute top-50 end-0 translate-middle-y me-3" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            </div>
            <input type="hidden" asp-for="_formMode" />
            <input type="hidden" asp-for="inputModel.Id" />
            <input type="hidden" asp-for="inputModel.loggedinUserId" value="@User.FindFirst("Userid")?.Value" />         

            <div class="row">

                <div class="col-6 mb-5">
                    <div class="form-group">
                        <label class="required form-label-new">@Localize.Localize("CATEGORY")</label>
                        <select asp-for="inputModel.Category" class="form-select form-select-sm"
                                asp-items='@new SelectList(Model.AccountTypeList, "keyID", "name")'>
                            <option value="">Select</option>
                        </select>
                        <span asp-validation-for="inputModel.Category" class="text-danger"></span>
                    </div>
                </div>

                  <div class="col-6 mb-5">
                    <div class="form-group">
                        <label class="required form-label-new">@Localize.Localize("Category_Type")</label>
                        <select asp-for="inputModel.Category" class="form-select form-select-sm"
                                asp-items='@new SelectList(Model.CategoryTypeList, "keyID", "name")'>
                            <option value="">Select</option>
                        </select>
                        <span asp-validation-for="inputModel.Category" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-6  mb-5">
                    <div class="form-group">
                        <label class="required form-label-new">@Localize.Localize("DATE")</label>
                        <div class="form-group" id="dt_datepicker">
                            <div class="input-group date" id="">
                                @if(Model.formMode==FormModeEnum.add)
                                {
                                      <input asp-for="inputModel.Date" id="PwdexDate" type="text" class="form-control form-control-sm" placeholder="@Localize.Localize("Date")" />
                      
                                }
                                else{
                                    <input asp-for="inputModel.DateFormat" type="text" class="form-control form-control-sm expiry" placeholder="@Localize.Localize("Date")" />

                                }
                                <span class="input-group-addon input-group-text input-group-text-sm">
                                    <i class="ki-duotone ki-calendar fs-2">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                    </i>
                                </span>
                            </div>
                        </div>
                        <span class="text-danger" data-valmsg-for="inputModel.PasswordExpirydate" id="PwdexDateError" data-valmsg-replace="true"></span>
                        <input type="hidden" asp-for="inputModel.Date">

                    </div>
                </div>
                
                <div class="col-6 mb-5">
                    <div class="form-group">
                        <label class="required form-label-new">@Localize.Localize("AMOUNT")</label>
                            <input asp-for="inputModel.TotalAmount" class="form-control form-control-sm"  maxlength="100" />
                        <span asp-validation-for="inputModel.TotalAmount" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-12  mb-5">
                    <div class="form-group">
                        <label class=" form-label-new">@Localize.Localize("Reference No")</label>
                        <input asp-for="inputModel.RefNo" class="form-control form-control-sm" id="EmailInput" />
                        <span asp-validation-for="inputModel.RefNo" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label class=" form-label-new">@Localize.Localize("Remark")</label>
                        <textarea asp-for="inputModel.Remarks" class="form-control form-control-sm" rows="4"></textarea>
                        <span asp-validation-for="inputModel.Remarks" class="text-danger"></span>
                    </div>
                </div>
                
            </div>

            <br />
            <div class="card-footer fixed-bottom bg-light pt-4">
                <div class="row">
                    <div class="col-6 text-start">
                        <button type="button" class="btn btn-secondary btn-flat btn-sm" id="btnClear"><i class="fas fa-times"></i> @Localize.Localize("BTN_CLEAR") </button>

                    </div>
                    <div class="col-6 text-end">
                        <button type="submit" name="btnSubmit" value="btnSave" id="btnSave" class="btn btn-primary btn-flat btn-sm btn-req-loader"><i class="far fa-save"></i> @Localize.Localize("BTN_SAVE")</button>
                        <button type="submit" name="btnSubmit" id="btnRefresh" value="btnRefresh" class="btn btn-outline-primary btn-sm d-none btn-req-loader" formnovalidate="formnovalidate">btnRefresh</button>
                    </div>
                </div>
            </div>           
        </div>
    </div>
</form>

@section scripts {
    <partial name="_ValidationScriptsPartial" />

    <script type="text/javascript">
        $(document).ready(function (e) {
            $("#btnClear").click(function () {
                    $("#crudForm")[0].reset(); // Reset the form fields

                     $(".select2").val(null).trigger("change");
                     $("#inputModel_Username").val("");
                     $(".expiry").val("");
            });
            top.hidePageLoader();
            $('#dt_datepicker .input-group.date').datepicker({
            format: "dd-M-yyyy",
            autoclose: true,
            todayHighlight: true,
            daysOfWeekDisabled: [],
            keepEmptyValues: false,
            templates: {
                leftArrow: '«',
                rightArrow: '»'
            }
            }).on('changeDate', function (e) {
                var value = $('#PwdexDate').val().trim();
                if (value !== '') {
                    $('#PwdexDateError').text('');
                    $('#PwdexDate').removeClass('is-invalid');
                }
            });
        });

        // Trigger refresh on role change
        $('.role-code').change(function () {
            var selectedValue = $(this).val();
            $("#btnRefresh").click();
        });

        if ("@Model.IsSuccessReturn" == "True") {
            top.Swal.fire({
                icon: 'success',
                buttonsStyling: false,
                title: "@Html.Raw(@Model.sucessMessage)",
                showConfirmButton: false,
                timer: 1500
            })
            top.hidePopupWithRefresh('btnRefresh');
        }
    </script>

}