            // });
        });

        $('.btnItemDeleteGroup').click(function () {
            var keyID = $(this).attr('keyID')
            var ID = $(this).attr('delete')
            var url = $("#hidGroupDeletePageUrl").val();

            if (ID == 1) {
                Swal.fire({
                    title: 'Are you sure?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, Deactivate it!',
                }).then((result) => {
                    if (result.isConfirmed) {
                        var data = { keyid: keyID, Id: ID }
                        postAjaxDeleteMasterData($("#hidGroupDeletePageUrl").val(), data, function (e) {
                            $("#btnRefresh").trigger("click")
                        });
                    }
                })
            }
            else {
                Swal.fire({
                    title: 'Are you sure?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, Activate it!',
                }).then((result) => {
                    if (result.isConfirmed) {
                        var data = { keyid: keyID, Id: ID }
                        postAjaxDeleteMasterData($("#hidGroupDeletePageUrl").val(), data, function (e) {
                            $("#btnRefresh").trigger("click")
                        });
                    }
                })
            }
            return false;
        });

        $('.btnItemEdits').click(function () {
            var modID = $(this).attr('keyID');

            var url = $("#hidGroupManagePageUrl").val() + "?id=" + modID + "&mode=edit";
            top.showPopup("Update Group", url, 600, 240, window.frameElement.id);
            return false;
        });

                  $('.btnItemViewGroup').click(function () {
        var groupId = $(this).attr('keyID');
        var url = "/CommitteManagement/ViewGroup?id=" + groupId;
        top.showPopup("View Group", url, 400, 230, window.frameElement?.id);
        return false;
    });
    });
</script>






                  
              
              
         