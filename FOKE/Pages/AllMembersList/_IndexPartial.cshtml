@model IndexModel
@using FOKE.Localization
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@using FOKE.Models.PageModels
@using System.Text.Json
@inject ISharedLocalizer Localize
@Html.AntiForgeryToken()
<div class="table-responsive">
    <input type="hidden" asp-for="pageNo" id="hidpageNo" />
    <input type="hidden" asp-for="pageSize" id="hidpageSize" />
    <input type="hidden" asp-for="sortColumn" id="hidSortColumn" />
    <input type="hidden" asp-for="sortOrder" id="hidSortOrder" />

    <div class="modal fade" id="otpModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold">OTP Requirement</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span>Mobile</span>
                        <label class="form-check form-switch form-check-custom form-check-solid">
                            <input class="form-check-input" type="checkbox" id="mobileToggle" checked="checked" />
                        </label>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span>E-Mail</span>
                        <label class="form-check form-switch form-check-custom form-check-solid">
                            <input class="form-check-input" type="checkbox" id="emailToggle" checked="checked" />
                        </label>
                    </div>
                    <div class="mt-3">
                        <small class="text-primary fs-6">
                            <strong>Note:</strong> An OTP is sent to members for registering their Digital ID.
                            If both Mobile OTP and Email OTP are disabled for a member, they will be required to enter the last 4 digits of their Civil ID as the OTP during Digital ID activation.
                        </small>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <table class="table table-hover table-rounded table-striped border gy-4 gs-7 table-sortable table-scroll">
        <thead>
            <tr class="fs-6 text-white bg-primary">
                <th class="ps-4 t-plr-sm-5">@Localize.Localize("TABLE_ACTION_HEADER")</th>
                <th class="ps-4 t-plr-sm-5 sorting" area-field="ReferenceNumber">
                    @Localize.Localize("Member ID")
                    <span><i class="fas fa-sort text-white" aria-hidden="true"></i></span>
                </th>
                <th class="ps-4 t-plr-sm-5 sorting" area-field="Name">
                    @Localize.Localize("Full Name")
                    <span><i class="fas fa-sort text-white" aria-hidden="true"></i></span>
                </th>
                <th class="ps-4 t-plr-sm-5 sorting" area-field="CivilId">
                    @Localize.Localize("Profession")
                    <span><i class="fas fa-sort text-white" aria-hidden="true"></i></span>
                </th>
                <th class="ps-4 t-plr-sm-5 sorting" area-field="Area">
                    @Localize.Localize("Area")
                    <span><i class="fas fa-sort text-white" aria-hidden="true"></i></span>
                </th>
                <th class="ps-4 t-plr-sm-5 sorting" area-field="Status">
                    @Localize.Localize("Status")
                    <span><i class="fas fa-sort text-white" aria-hidden="true"></i></span>
                </th>
                <th class="ps-4 t-plr-sm-5 sorting" area-field="Status">
                    @Localize.Localize("Member since")
                    <span><i class="fas fa-sort text-white" aria-hidden="true"></i></span>
                </th>
                <th class="ps-4 t-plr-sm-5 sorting" area-field="Status">
                    @Localize.Localize("Last Membership Added")
                    <span><i class="fas fa-sort text-white" aria-hidden="true"></i></span>
                </th>
            </tr>
        </thead>

        <tbody>
        @if (Model.pagedListData != null && Model.pagedListData.Count() > 0)
        {
            @for (int i = 0; i < Model.pagedListData.Count(); i++)
            {
                var item = Model.pagedListData[i];
                <tr>
                    <td>
                        <div class="test btn btn-icon btn-sm btn-light btn-center btn-active-light-primary"
                            data-kt-menu-trigger="click"
                            data-kt-menu-placement="bottom-end">
                        </div>
                        <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4 " data-kt-menu="true">
                            <div class="menu-item px-3">
                                <a href="/AllMembersList/MemberDetailsView?Id=@item.IssueId" class="menu-link px-3 btnItemView" keyID="@item.IssueId"
                                title="@Localize.Localize("View")">@Localize.Localize("View")</a>
                            </div>
                            <div class="menu-item px-3">
                                <a href="#"
                                class="menu-link px-3 btnItemOtp" keyID="@item.IssueId">@Localize.Localize("OTP")</a>
                            </div>
                            <div class="menu-item px-3">
                                <a href="#" class="menu-link px-3 btnAddMembers" data-areaid="@item.AreaId">
                                    @Localize.Localize("")
                                </a>
                            </div>
                        </div>
                    </td>
                    <td>
                            @if (item.MembershipNo != null )
                            {
                                @item.MembershipNo
                            }
                            else
                            {
                                @item.ReferenceNumber
                            }
                    </td>
                    <td>
                        @item.Name
                        <a href="javascript:void(0);"
                           onclick="showContactPopup('@item.Email', '@item.PhoneNo')"
                           title="View Contact Info"
                           class="ms-2">
                            <i class="fas fa-info-circle text-primary" style="font-size: 1.2rem;"></i>
                        </a>
                    </td>
                    <td>@item.Profession</td>
                    <td>
                        @item.Area
                    </td>
                    <td>
                            @if (item.PaymentDone)
                            {
                                <span class="badge badge-success">Active</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Payment Pending</span>
                            }                 
                    </td>    
                    <td>
                          @item.Memberfrom?.ToString("dd-MM-yyyy")

                    </td>
                    <td>
                            @item.LastMembershipAdded
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-sm-12 col-md-5 d-flex align-items-center justify-content-center justify-content-md-start pt-3">
        <div class="dataTables_length" id="kt_datatable_fixed_header_length">
            <label>
                <select asp-for="pageSize" id="kt_datatable_page_size" class="form-select form-select-sm form-select-solid">
                    <option value="10">10</option>
                    <option value="25">25</option>
                    <option value="50">50</option>
                    <option value="100">100</option>
                </select>
            </label>
        </div><div class="dataTables_info" id="kt_datatable_fixed_header_info" role="status" aria-live="polite">Showing @(Model?.pagedListData?.FirstItemOnPage ?? 0) to @(Model?.pagedListData?.LastItemOnPage ?? 0) of @(Model?.pagedListData?.TotalItemCount ?? 0) records</div>
    </div><div class="col-sm-12 col-md-7 d-flex align-items-center justify-content-center justify-content-md-end">
        <div class="dataTables_paginate paging_simple_numbers" id="kt_datatable_fixed_header_paginate">
            @if (Model.hasPagination)
            {
                <div>
                    @Html.PagedListPager((IPagedList)Model.pagedListData, page => Url.Page("Index", "PagedList",
                             new
                             {
                                 pn = page,
                                 ps = Model.pageSize,
                                 so = Model.sortOrder,
                                 sc = Model.sortColumn,
                                 nm = Model.globalSearch
                             }),
                             PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new PagedListRenderOptions()
                {
                    PageClasses = new string[] { "page-link" },
                    LiElementClasses = new string[] { "page-item" },
                    UlElementClasses = new string[] { "pagination pagination-circle pagination-outline" },
                    EllipsesElementClass = "ki-duotone ki-double-left fs-2",
                    Display = PagedListDisplayMode.IfNeeded,
                    DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                    DisplayLinkToLastPage = PagedListDisplayMode.Always,
                    DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                    DisplayLinkToNextPage = PagedListDisplayMode.Always,
                    LinkToPreviousPageFormat = "<i class='fas fa-angle-left'></i>",
                    LinkToNextPageFormat = "<i class='fas fa-angle-right'></i>",
                    LinkToFirstPageFormat = "<i class='fas fa-step-backward'></i>",
                    LinkToLastPageFormat = "<i class='fas fa-step-forward'></i>",
                    MaximumPageNumbersToDisplay = 10, // Adjust this number as needed
                }, new AjaxOptions()
                { HttpMethod = "Get", UpdateTargetId = "_postList", OnBegin = "showInTableLoader()", OnSuccess = "", OnComplete = "hideInTableLoader()" }))
                </div>
            }
        </div>
    </div>
</div>


<div id="tableLoader" class="loader-container">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>

<script src="~/js/ktable.js" asp-append-version="true"></script>
<script type="text/javascript">

    $(function () {
        KTMenu.init()

        $(document).ready(function () 
        {
            $("#tableLoader").removeClass("hidden"); // Show loader on page load

           $(document).ready(function () {
            $("#tableLoader").addClass("hidden");
            });
        });

        $('.btnItemDelete').click(function () {
            var keyID = $(this).attr('keyID')
            var ID = $(this).attr('delete')
            var url = $("#hidDeletePageUrl").val();  // Get the URL value

            console.log('Generated URL:', url);  // Log the generated URL
            if (ID == 1) {
                Swal.fire({
                    title: 'Are you sure?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, Deactivate it!',
                }).then((result) => {
                    if (result.isConfirmed) {
                        var data = { keyid: keyID, Id: ID }
                        postAjaxDeleteMasterData($("#hidDeletePageUrl").val(), data, function (e) {
                            $("#btnRefresh").trigger("click")
                        });
                    }
                })
            }
            else {
                Swal.fire({
                    title: 'Are you sure?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, Activate it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        var data = { keyid: keyID, Id: ID }
                        console.log('Generated URL:', url);  // Log the generated URL
                        postAjaxDeleteMasterData($("#hidDeletePageUrl").val(), data, function (e) {
                            $("#btnRefresh").trigger("click")
                        });
                    }
                })
            }
            return false;
        });

        $('.btnItemVerify').click(function () {
            var keyID = $(this).attr('keyID')
            console.log(keyID);
            var url = $("#hidViewPageUrl").val() + "?id=" + keyID + "&mode=edit"
            window.location.href = url;
            return false;
        });

        $('.btnItemEdit').click(function () {
            debugger
            var modID = $(this).attr('keyID')
            var url = $("#hidManagePageUrl").val() + "?id=" + modID + "&mode=edit"
            top.showPopup("Update Department", url, 600, 240, window.frameElement.id);
            return false;
        });

        let currentKeyID = null;

        $('.btnItemOtp').click(function () {
              currentKeyID  = $(this).attr('keyID');
            $('#mobileToggle, #emailToggle').prop('disabled', true);
       
            $.ajax({
                 url: `/AllMembersList/Index?handler=OtpSettings&issueId=${currentKeyID}`,
                 method: 'GET',
                 success: function (response) {
              
                    $('#mobileToggle').prop('checked', response.mobile);
                    $('#emailToggle').prop('checked', response.email);

                
                    $('#mobileToggle, #emailToggle').prop('disabled', false);

               
                    const otpModal = new bootstrap.Modal(document.getElementById('otpModal'));
                    otpModal.show();
                 },
                 error: function () {
                    alert('Failed to load OTP settings.');
                 }
            });
            return false;
        });
       

        $('#mobileToggle, #emailToggle').change(function () {
            const mobileOtp = $('#mobileToggle').is(':checked');
  
            const emailOtp = $('#emailToggle').is(':checked');
            var token = $('input[name="__RequestVerificationToken"]').val();

            if (!currentKeyID) return;

            $.ajax({
                url: '?handler=UpdateOtpPreference',
                type: 'POST',
                data: {
                    id: currentKeyID,
                    mobileOtp: mobileOtp,
                    emailOtp: emailOtp
                },
                headers: {
                    'XSRF-TOKEN': token
                },

                success: function () {
                    console.log('OTP preferences updated');
                },

                error: function () {
                    console.error('Failed to update OTP preferences');
                }
            });
        });

    });
     function showContactPopup(email, phone) {
        Swal.fire({
            title: '📞 Contact Info',
            html: `<div class="text-start">
                      <p><strong>Email:</strong> ${email}</p>
                      <p><strong>Phone:</strong> ${phone}</p>
                   </div>`,
            icon: 'info',
            confirmButtonText: 'Close',
            customClass: {
                popup: 'rounded-4'
            }
        });
    }
</script>